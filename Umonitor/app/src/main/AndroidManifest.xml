<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ram.umonitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MOActivity"
            android:label="@string/title_activity_mo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NurseActivity"
            android:label="@string/title_activity_nurse"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConsultantActivity"
            android:label="@string/title_activity_consultant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".test.ControlTest"></activity>

        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>